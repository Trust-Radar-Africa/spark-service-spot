# ======================================
# API CONFIGURATION
# ======================================

# Backend Selection: 'laravel' or 'json-server'
# - laravel: Connect to Laravel API (production)
# - json-server: Use JSON Server for local development
VITE_API_BACKEND=laravel

# JSON Server URL (used when VITE_API_BACKEND=json-server)
# Run: npx json-server --watch db.json --port 3001
VITE_JSON_SERVER_URL=http://localhost:3001

# Laravel API URL (used when VITE_API_BACKEND=laravel)
VITE_LARAVEL_API_URL=https://phplaravel-1579491-6162293.cloudwaysapps.com

# ======================================
# DATA MODE
# ======================================

# Data Mode: 'demo' or 'live'
# - demo: Uses local Zustand stores (mock data)
# - live: Fetches from API (JSON Server or Laravel)
VITE_DATA_MODE=live
